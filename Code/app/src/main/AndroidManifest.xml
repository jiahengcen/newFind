<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pwc.newfind">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:name=".base.Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"

        android:supportsRtl="true"
        android:theme="@style/AppTheme.AppBarOverlay">

        <activity
            android:name=".home.IndustryPickActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".home.CompanyPickActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <activity
            android:name=".home.MainActivity"
            android:label="关注"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar.Normal">

        </activity>
        <activity
            android:name=".detail.CompanyDetailActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <activity
            android:name=".home.SearchActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>

        <activity
            android:name=".setting.FavouriteCompanyActivity"
            android:label="关注公司"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".setting.FavouriteIndustryActivity"
            android:label="关注行业"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".NewsWebViewActivity"
            android:label="新闻"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar.Normal">

        </activity>
    </application>

</manifest>